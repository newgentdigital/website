---
import SvgLogomarkAktiebolagWhite from "../../assets/brand/logomark-aktiebolag-white.svg";
import NavbarBase from "./NavbarBase.astro";
import NavbarReturn from "./NavbarReturn.astro";
import { getLangFromUrl, useTranslation } from "../../i18n/utils";
import NavbarActionsBar from "./NavbarActionsBar.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslation(lang);

const links = [
  { href: "/investors/financials", title: t("nav").links.financials },
  { href: "/investors/governance", title: t("nav").links.governance },
  { href: "/investors/events", title: t("nav").links.events },
  {
    href: "/investors/contact",
    title: t("nav").links.contact,
    alternate: true,
  },
  { href: "/investors/news", title: t("nav").links.news, cta: true },
];

const actionBarLinks = [
  {
    href: "https://bi.newgent.digital/",
    title:
      t("nav").actionbar.platforms.items.investors.subItems.businessIntelligence
        .label,
    description:
      t("nav").actionbar.platforms.items.investors.subItems.businessIntelligence
        .description,
    isSecure: true,
  },
  {
    href: "https://archive.newgent.digital/",
    title:
      t("nav").actionbar.platforms.items.investors.subItems.documentArchive
        .label,
    description:
      t("nav").actionbar.platforms.items.investors.subItems.documentArchive
        .description,
    isSecure: true,
  },
  {
    href: "https://mantle.newgent.digital/",
    title:
      t("nav").actionbar.platforms.items.investors.subItems.equityManagement
        .label,
    description:
      t("nav").actionbar.platforms.items.investors.subItems.equityManagement
        .description,
    isSecure: true,
  },
  {
    href: "/",
    title: t("nav").actionbar.platforms.items.newgent.label,
    description: t("nav").actionbar.platforms.items.newgent.description,
  },
];
---

<NavbarBase iconHref="/investors" {links}>
  <NavbarReturn slot="return" />
  <NavbarActionsBar
    links={actionBarLinks}
    platformsLabel={t("nav").actionbar.login}
    slot="actions"
  />

  <slot slot="icon">
    <SvgLogomarkAktiebolagWhite height={24} />
  </slot>
</NavbarBase>
