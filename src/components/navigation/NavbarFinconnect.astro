---
import SvgLogomarkFinconnectWhite from "../../assets/brand/logomark-finconnect-white.svg";
import NavbarBase from "./NavbarBase.astro";
import NavbarReturn from "./NavbarReturn.astro";
import { getLangFromUrl, useTranslation } from "../../i18n/utils";
import NavbarActionsBar from "./NavbarActionsBar.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslation(lang);

const links = [
  { href: "/finconnect/integrations", title: t("nav").links.integrations },
  { href: "/finconnect/setup", title: t("nav").links.setup },
  { href: "/finconnect/about", title: t("nav").links.about },
  { href: "/wiki", title: t("nav").links.support, alternate: true },
  { href: "/finconnect/pricing", title: t("nav").links.getStarted, cta: true },
];

const actionBarLinks = [
  {
    href: "https://finconnect.newgent.digital",
    title:
      t("nav").actionbar.platforms.items.finconnect.subItems.manageFinconnect
        .label,
    description:
      t("nav").actionbar.platforms.items.finconnect.subItems.manageFinconnect
        .description,
    isSecure: true,
  },
  {
    href: "https://billing.newgent.digital/",
    title: t("nav").actionbar.platforms.items.customerPortal.label,
    description: t("nav").actionbar.platforms.items.customerPortal.description,
    isSecure: true,
  },
  {
    href: "https://github.com/newgentdigital/finconnect",
    title:
      t("nav").actionbar.platforms.items.finconnect.subItems.finconnectGithub
        .label,
    description:
      t("nav").actionbar.platforms.items.finconnect.subItems.finconnectGithub
        .description,
  },
  {
    href: "/",
    title: t("nav").actionbar.platforms.items.newgent.label,
    description: t("nav").actionbar.platforms.items.newgent.description,
  },
];
---

<NavbarBase iconHref="/finconnect" {links}>
  <NavbarReturn slot="return" />
  <NavbarActionsBar
    links={actionBarLinks}
    platformsLabel={t("nav").actionbar.login}
    slot="actions"
  />

  <slot slot="icon">
    <SvgLogomarkFinconnectWhite height={24} />
  </slot>
</NavbarBase>
