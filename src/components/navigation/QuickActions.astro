---
import RiArrowRightLine from "../icons/ri/RiArrowRightLine.astro";
import { getLangFromUrl } from "../../i18n/utils";
import { getRelativeLocaleUrl } from "astro:i18n";

interface Props {
  links?: Array<{ label: string; href: string }>;
}

const lang = getLangFromUrl(Astro.url);

const {
  links = [
    { label: "Free consultation", href: "/consultation" },
    { label: "Get a quote", href: "/pricing/quote" },
    { label: "Client reviews", href: "/reviews" },
  ],
} = Astro.props;
---

<nav class="border-y border-zinc-300 dark:border-zinc-700">
  <ul
    class="grid grid-cols-1 divide-y divide-zinc-300 sm:grid-cols-3 sm:divide-x sm:divide-y-0 dark:divide-zinc-700"
  >
    {
      links?.map((link) => (
        <li>
          <a
            class="link link-ghost group flex w-full justify-between gap-2 px-8 py-6 font-medium hover:bg-nwg-sky-500 hover:text-zinc-100"
            href={getRelativeLocaleUrl(lang, link.href)}
          >
            {link.label}
            <RiArrowRightLine class="transition-transform group-hover:translate-x-0.5" />
          </a>
        </li>
      ))
    }
  </ul>
</nav>
