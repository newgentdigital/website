---
import SvgLogomarkDiscernWhite from "../../assets/brand/logomark-discern-white.svg";
import NavbarBase from "./NavbarBase.astro";
import NavbarReturn from "./NavbarReturn.astro";
import { getLangFromUrl, useTranslation } from "../../i18n/utils";
import NavbarActionsBar from "./NavbarActionsBar.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslation(lang);

const links = [
  { href: "/discern/destinations", title: t("nav").links.destinations },
  { href: "/discern/setup", title: t("nav").links.setup },
  { href: "/discern/about", title: t("nav").links.about },
  { href: "/wiki", title: t("nav").links.support, alternate: true },
  { href: "/discern/pricing", title: t("nav").links.getStarted, cta: true },
];

const actionBarLinks = [
  {
    href: "https://discern.newgent.digital",
    title:
      t("nav").actionbar.platforms.items.discern.subitems.manageDiscern.label,
    description:
      t("nav").actionbar.platforms.items.discern.subitems.manageDiscern
        .description,
  },
  {
    href: "https://billing.newgent.digital/",
    title: t("nav").actionbar.platforms.items.customerPortal.label,
    description: t("nav").actionbar.platforms.items.customerPortal.description,
  },
  {
    href: "https://github.com/newgentdigital/discern",
    title:
      t("nav").actionbar.platforms.items.discern.subitems.discernGithub.label,
    description:
      t("nav").actionbar.platforms.items.discern.subitems.discernGithub
        .description,
  },
  {
    href: "/",
    title: t("nav").actionbar.platforms.items.newgent.label,
    description: t("nav").actionbar.platforms.items.newgent.description,
  },
];
---

<NavbarBase iconHref="/discern" {links}>
  <NavbarReturn slot="return" />
  <NavbarActionsBar
    links={actionBarLinks}
    platformsLabel={t("nav").actionbar.login}
    slot="actions"
  />

  <slot slot="icon">
    <SvgLogomarkDiscernWhite height={24} />
  </slot>
</NavbarBase>
