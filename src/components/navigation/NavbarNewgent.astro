---
import SvgIconWhite from "../../assets/brand/icon-white.svg";
import NavbarBase from "./NavbarBase.astro";
import { getLangFromUrl, useTranslation } from "../../i18n/utils";
import NavbarActionsBar from "./NavbarActionsBar.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslation(lang);

const links = [
  { href: "/services", title: t("nav").links.services },
  { href: "/company", title: t("nav").links.aboutUs },
  { href: "/work", title: t("nav").links.work },
  { href: "/contact", title: t("nav").links.contact, alternate: true },
  { href: "/hire", title: t("nav").links.hire, cta: true },
];
---

<NavbarBase {links}>
  <NavbarActionsBar slot="actions" />

  <slot slot="icon">
    <SvgIconWhite height={24} width={24} />
  </slot>
</NavbarBase>
