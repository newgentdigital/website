---
import SvgLogomarkFinconnectColorBlack from "../../assets/brand/logomark-finconnect-color-black.svg";
import SvgLogomarkFinconnectColorWhite from "../../assets/brand/logomark-finconnect-color-white.svg";
import FooterBase from "./FooterBase.astro";
import FooterNewsletterSignup from "./FooterNewsletterSignup.astro";
import { getLangFromUrl, useTranslation } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslation(lang);

const links = [
  {
    category: t("footer").links.newgent.label,
    href: "/company",
    links: [
      { title: t("footer").links.newgent.items.about, href: "/company" },
      { title: t("footer").links.newgent.items.team, href: "/team" },
      { title: t("footer").links.newgent.items.careers, href: "/careers" },
      { title: t("footer").links.newgent.items.awards, href: "/awards" },
      { title: t("footer").links.newgent.items.partners, href: "/partners" },
      { title: t("footer").links.newgent.items.investors, href: "/investors" },
      { title: t("footer").links.newgent.items.handbook, href: "/handbook" },
    ],
  },
  {
    category: t("footer").links.finconnectIntegrations.label,
    href: "/finconnect/integrations",
    links: [
      {
        title: t("footer").links.finconnectIntegrations.items.fortnox,
        href: "/finconnect/integrations/fortnox",
      },
      {
        title: t("footer").links.finconnectIntegrations.items.skatteverker,
        href: "/finconnect/integrations/skatteverker",
      },
      {
        title: t("footer").links.finconnectIntegrations.items.stripe,
        href: "/finconnect/integrations/stripe",
      },
      {
        title: t("footer").links.finconnectIntegrations.items.wise,
        href: "/finconnect/integrations/wise",
      },
      {
        title: t("footer").links.finconnectIntegrations.items.rippling,
        href: "/finconnect/integrations/rippling",
      },
      {
        title: t("footer").links.finconnectIntegrations.items.allIntegrations,
        href: "/finconnect/integrations",
      },
    ],
  },
  {
    category: t("footer").links.resources.label,
    links: [
      {
        title: t("footer").links.resources.items.aboutFinconnect,
        href: "/finconnect/about",
      },
      {
        title: t("footer").links.resources.items.installFinconnect,
        href: "/finconnect/setup",
      },
      {
        title: t("footer").links.resources.items.opensource,
        href: "/finconnect/oss",
      },
      { title: t("footer").links.resources.items.blog, href: "/blog" },
      { title: t("footer").links.resources.items.presskit, href: "/press-kit" },
      { title: t("footer").links.resources.items.discern, href: "/discern" },
    ],
  },
  {
    category: t("footer").links.support.label,
    links: [
      { title: t("footer").links.support.items.hire, href: "/hire" },
      { title: t("footer").links.support.items.contact, href: "/contact" },
      { title: t("footer").links.support.items.faq, href: "/finconnect/faq" },
      { title: t("footer").links.support.items.wiki, href: "/finconnect/wiki" },
    ],
  },
  {
    category: t("footer").links.legal.label,
    href: "/legal",
    links: [
      { title: t("footer").links.legal.items.terms, href: "/legal/terms" },
      { title: t("footer").links.legal.items.privacy, href: "/legal/privacy" },
      { title: t("footer").links.legal.items.cookies, href: "/legal/cookies" },
      {
        title: t("footer").links.legal.items.disclaimer,
        href: "/legal/disclaimer",
      },
      { title: t("footer").links.legal.items.imprint, href: "/legal/imprint" },
    ],
  },
];
---

<FooterNewsletterSignup />

<FooterBase
  description={t("footer").description.finconnect}
  iconHref="/finconnect"
  {links}
>
  <slot slot="logo">
    <SvgLogomarkFinconnectColorBlack class="h-8 dark:hidden" />
    <SvgLogomarkFinconnectColorWhite class="hidden h-8 dark:block" />
  </slot>
</FooterBase>
